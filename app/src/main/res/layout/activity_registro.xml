<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registro">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="605dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REGISTRO DE USUARIOS"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNombres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Nombre" />

                    <TextView
                        android:id="@+id/tvApellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="Apellidos" />

                    <TextView
                        android:id="@+id/tvIdentificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="No de Identificación" />

                    <TextView
                        android:id="@+id/tvFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Fecha de nacimiento" />

                    <TextView
                        android:id="@+id/tvCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Correo" />

                    <TextView
                        android:id="@+id/tvClave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="Clave" />

                    <TextView
                        android:id="@+id/tvCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="Celular" />

                    <TextView
                        android:id="@+id/tvDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="Dirección" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="Tomar coordenadas" />

                    <TextView
                        android:id="@+id/tvFacultad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45dp"
                        android:text="Facultad" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="297dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etNombre"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:text="Juan Gabriel" />

                    <EditText
                        android:id="@+id/etApellidos"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:text="Carvajal Hernandez" />

                    <EditText
                        android:id="@+id/etIdentificacion"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:text="10101010" />

                    <TextView
                        android:id="@+id/fechaNacimiento"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="16/01/1991"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:inputType="text"
                        android:text="email@uqvirtual.edu.co" />

                    <EditText
                        android:id="@+id/etclave"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:text="1234" />

                    <EditText
                        android:id="@+id/etCelular"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:text="3136106384" />

                    <EditText
                        android:id="@+id/etDireccion"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:text="Las americas Mz i No 4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/idCoordenadas"
                                android:layout_width="130dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/ibtCoordenadas"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                app:srcCompat="@drawable/ic_action_my_location" />
                        </LinearLayout>

                    </LinearLayout>


                    <Spinner
                        android:id="@+id/spFacultades"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:entries="@array/facultades" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorBotones"
                android:text="Registrar"
                android:textSize="24sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>